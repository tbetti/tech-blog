<div class="new-post-box">
    <div class="posts">
        <section class="card" data-id="{{post.id}}">
            <div class="card-head">
                Posted by {{post.user.username}} at {{format_date post.updatedAt}}
            </div>
            <div class="card-body">
                {{post.post}}
            </div>
        </section>
    </div>
    <h3>Leave a comment</h3>
    <form id="new-comment-form">
        <textarea id="new-comment"></textarea>
        <input type="submit" class="submit">
    </form>
</div>
<script src="/js/viewPostComment.js"></script>