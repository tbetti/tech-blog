<section class="card">
    <div class="card-head">
        <h3 class="card-title" id="{{id}}">{{title}}</h3>
        <div>
            <div class="card-options">
                <p id="edit" class="edit-btn" data-editid="{{id}}"><i class="fa fa-pencil" aria-hidden="true"></i></p>
                <p id="delete" class="delete-btn" data-deleteid="{{id}}"><i class="fa fa-trash" aria-hidden="true"></i></p>
            </div>
            <p>Posted by <span id="username">{{user.username}}</span> at {{format_date updatedAt}}</p>
        </div>
    </div>
    <div class="card-body">
        {{post}}
    </div>
</section>