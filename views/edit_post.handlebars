<link rel="stylesheet" href="/css/view-post-comment.css">
<div class="new-post-box">
    <h2>Edit Your Post:</h2>
    <form id="new-post-form" data-postid={{post.id}}>
        <label for="title">Title:</label><br>
        <input type="text" id="title" class="title" name="title" value="{{post.title}}"><br>
        <label for="new-post">Content:</label><br>
        <textarea id="new-post" name="new-post">{{post.post}}</textarea>
        <input type="submit" class="submit">
    </form>
</div>
<script src="/js/editPost.js"></script>